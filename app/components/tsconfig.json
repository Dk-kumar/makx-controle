{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@expo/*": ["node_modules/@expo/*"],
      "@/*": [
        "app/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "../screens/Signup.tsx", "../screens/About.tsx", "../screens/AddDevice.tsx", "../screens/DeviceList.tsx", "../screens/Profile.tsx", "../screens/Signin.tsx"  ],
  "extends": "expo/tsconfig.base.json"
}
